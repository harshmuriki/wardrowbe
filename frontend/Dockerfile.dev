FROM node:20-alpine

WORKDIR /app

# Copy package files first for better caching
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# The rest will be mounted as volume
# But we need node_modules to persist, so we use a named volume

EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Install deps again at startup in case package.json changed
CMD npm install && npm run dev
