# Wardrobe Secrets Template
# Copy this file to secrets.yaml and fill in the values
# DO NOT commit secrets.yaml to git!
#
# To generate base64 values:
#   echo -n 'your-value' | base64
#
# To generate random secrets:
#   openssl rand -hex 32 | tr -d '\n' | base64

apiVersion: v1
kind: Secret
metadata:
  name: wardrobe-secrets
  namespace: wardrobe
type: Opaque
data:
  # PostgreSQL password (required)
  # Example: echo -n 'your-postgres-password' | base64
  postgres-password: <BASE64_ENCODED_POSTGRES_PASSWORD>

  # Database connection string (required)
  # Format: postgresql+asyncpg://wardrobe:<PASSWORD>@postgres:5432/wardrobe
  database-url: <BASE64_ENCODED_DATABASE_URL>

  # NextAuth secret (required) - generate with: openssl rand -hex 32
  # Example: echo -n 'your-nextauth-secret' | base64
  nextauth-secret: <BASE64_ENCODED_NEXTAUTH_SECRET>

  # Backend secret key (required) - generate with: openssl rand -hex 32
  # Example: echo -n 'your-backend-secret' | base64
  backend-secret-key: <BASE64_ENCODED_BACKEND_SECRET>

  # OIDC Provider credentials (required for authentication)
  # Works with any OIDC provider: Authentik, Keycloak, Pocket ID, Auth0, etc.
  oidc-client-id: <BASE64_ENCODED_OIDC_CLIENT_ID>
  oidc-client-secret: <BASE64_ENCODED_OIDC_CLIENT_SECRET>

  # Optional: AI API key (if using an authenticated endpoint like OpenAI)
  # Example: echo -n 'sk-xxx' | base64
  ai-api-key: ""

---
# Optional: Notification secrets
apiVersion: v1
kind: Secret
metadata:
  name: wardrobe-notifications
  namespace: wardrobe
type: Opaque
data:
  # ntfy token (optional, for push notifications)
  ntfy-token: ""
